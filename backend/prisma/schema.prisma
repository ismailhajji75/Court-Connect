generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// =======================
// MODELS
// =======================

// We store roles as simple strings: "STUDENT", "STAFF", "ADMIN"
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("STUDENT") // STUDENT | STAFF | ADMIN
  balance   Int      @default(0)
  createdAt DateTime @default(now())

  reservations  Reservation[]
  notifications Notification[]
}

model Facility {
  id          String  @id
  name        String
  description String?
  location    String?
  maxCapacity Int?
  isActive    Boolean @default(true)

  reservations Reservation[]
}

model Equipment {
  id            String  @id
  name          String
  description   String?
  totalQuantity Int
  isActive      Boolean @default(true)

  reservationEquipment ReservationEquipment[]
}

model Reservation {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  facilityId String
  facility   Facility @relation(fields: [facilityId], references: [id])

  startTime        DateTime
  endTime          DateTime
  participantCount Int

  status      String   @default("PENDING") // PENDING | CONFIRMED | CANCELLED | COMPLETED
  totalPrice  Int      @default(0)
  bikeType    String?
  rentalPlan  String?
  paidAt      DateTime?
  declinedAt  DateTime?
  createdDate DateTime @default(now())

  equipmentItems ReservationEquipment[]
  notifications  Notification[]
}

model ReservationEquipment {
  reservationId Int
  equipmentId   String

  quantity Int

  reservation Reservation @relation(fields: [reservationId], references: [id])
  equipment   Equipment   @relation(fields: [equipmentId], references: [id])

  @@id([reservationId, equipmentId])
}

model Notification {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  reservationId Int
  reservation   Reservation @relation(fields: [reservationId], references: [id])

  message  String
  type     String   @default("CONFIRMATION") // CONFIRMATION | REMINDER | CANCELLATION
  isRead   Boolean  @default(false)
  sentDate DateTime @default(now())
}

